<h1>Welcome to Gossip Website</h1>

<% flash.each do |type, msg| %>
    <div class="alert alert-danger" role="alert">
      <%= msg %>
    </div>
  <% end %>
  <br/>
  <div class="d-flex justify-content-between">
 
<h2>Gossip list</h2>
<a href="gossips/new" class="btn btn-danger">Create new Gossip</a>
</div><br/>
<div class="row">
<% Gossip.all.each do |potin| %>
<div class="card col-sm-3" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title">title: <%= potin.title %> </h5>
    <p class="card-text">Author: <%= potin.user.first_name %> </p>
    <a href="gossips/<%= potin.id %>" class="btn btn-primary">See details</a>
    </p>
    </div>
</div>
    <% end %>
</div>
