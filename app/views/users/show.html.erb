<h1>Author id <%= params[:id] %></h1>

<div class="card" style="width: 18rem;">
    <div class="card-body">
    <p class="card-title">Author: <%= @user.first_name %> <%= @user.last_name %><br/>description: <%= @user.description %><br/>Email: <%= @user.email %><br/>Age: <%= @user.age%><br/>City: <%= @user.city.name %></p>
   
    </div>
</div>
<h5>Mes potins</h5>
<div class="row">
<% @user.gossips.each do |potin| %>
<div class="card col-sm-3" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title">title: <%= potin.title %> </h5>
    <p class="card-text">Author: <%= potin.user.first_name %> </p>
    <a href="/gossips/<%= potin.id %>" class="btn btn-primary">See details</a>
    </p>
    </div>
</div>
    <% end %>
</div>