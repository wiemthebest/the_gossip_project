<h1>Potin id <%= params[:id] %></h1>
<% potin = Gossip.find_by_id(params[:id])%>
<div class="card col-sm-3" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"><%= potin.title %> </h5>
    <p class="card-text"><%= potin.content %><br/><%= potin.created_at %> </p>
    <a href="/author/<%= potin.user.id %>" class="btn btn-primary">Author: <%= potin.user.first_name %></a>
    </p>
    </div>
</div>
